<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"



    tools:context="testcal.com.calculator.MainCalDisplayActivity">

    <TextView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:background="#f9fbe7"
        android:textColor="@color/w1"
        />

    <EditText
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:enabled="false"
        android:gravity="bottom"
        android:lines="2"
        android:maxLines="2"
        android:textSize="30dp"
        android:textColor="@color/w1"
        android:background="#f9fbe7"
        />

    <Button
        android:id="@+id/Seven"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/b"
        android:textColor="@color/w"
        android:textSize="25dp"
        android:text="7"
        android:layout_below="@+id/text"
        />Button
    <Button
        android:id="@+id/Eight"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/b"
        android:textColor="@color/w"
        android:text="8"
        android:textSize="25dp"
        android:layout_below="@+id/text"
        android:layout_toRightOf="@+id/Seven"
        />Button
    <Button
        android:id="@+id/Nine"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/b"
        android:textColor="@color/w"
        android:text="9"
        android:textSize="25dp"
        android:layout_below="@+id/text"
        android:layout_toRightOf="@+id/Eight"
        />Button
    <Button
        android:id="@+id/Divide"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/r"
        android:textColor="@color/w"
        android:text="/"
        android:textSize="25dp"
        android:layout_below="@+id/text"
        android:layout_toRightOf="@+id/Nine"
        />Button
    <Button
        android:id="@+id/Four"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/b"
        android:textColor="@color/w"
        android:text="4"
        android:textSize="25dp"
        android:layout_below="@+id/Seven"
        />Button
    <Button
        android:id="@+id/Five"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/b"
        android:textColor="@color/w"
        android:text="5"
        android:textSize="25dp"
        android:layout_below="@+id/Eight"
        android:layout_toRightOf="@+id/Four"
        />Button
    <Button
        android:id="@+id/Six"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/b"
        android:textColor="@color/w"
        android:text="6"
        android:textSize="25dp"
        android:layout_below="@+id/Nine"
        android:layout_toRightOf="@+id/Five"
        />Button
    <Button
        android:id="@+id/Multiply"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/r"
        android:textColor="@color/w"
        android:text="*"
        android:textSize="25dp"
        android:layout_below="@+id/Divide"
        android:layout_toRightOf="@+id/Six"
        />Button
    <Button
        android:id="@+id/One"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/b"
        android:textColor="@color/w"
        android:text="1"
        android:textSize="25dp"
        android:layout_below="@+id/Four"
        />Button
    <Button
        android:id="@+id/Two"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/b"
        android:textColor="@color/w"
        android:text="2"
        android:textSize="25dp"
        android:layout_below="@+id/Five"
        android:layout_toRightOf="@+id/One"
        />Button
    <Button
        android:id="@+id/Three"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/b"
        android:textColor="@color/w"
        android:text="3"
        android:textSize="25dp"
        android:layout_below="@+id/Six"
        android:layout_toRightOf="@+id/Two"
        />Button
    <Button
        android:id="@+id/Substract"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/r"
        android:textColor="@color/w"
        android:text="-"
        android:textSize="25dp"
        android:layout_below="@+id/Multiply"
        android:layout_toRightOf="@+id/Three"
        />Button
    <Button
        android:id="@+id/Dot"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/b"
        android:textColor="@color/w"
        android:text="."
        android:textSize="25dp"
        android:layout_below="@+id/One"
        />Button
    <Button
        android:id="@+id/Zero"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/b"
        android:textColor="@color/w"
        android:text="0"
        android:textSize="25dp"
        android:layout_below="@+id/Two"
        android:layout_toRightOf="@+id/Dot"
        />Button
    <Button
        android:id="@+id/Equal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/r"
        android:textColor="@color/w"
        android:text="="
        android:textSize="25dp"
        android:layout_below="@+id/Three"
        android:layout_toRightOf="@+id/Zero"
        />Button
    <Button
        android:id="@+id/Add"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/r"
        android:textColor="@color/w"
        android:text="+"
        android:textSize="25dp"
        android:layout_below="@+id/Substract"
        android:layout_toRightOf="@+id/Equal"
        />Button
    <Button
        android:id="@+id/e1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/b"
        android:textColor="@color/w"
        android:text=""
        android:textSize="25dp"
        android:layout_below="@+id/Dot"
        />Button
    <Button
        android:id="@+id/e2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/b"
        android:textColor="@color/w"
        android:text=""
        android:textSize="25dp"
        android:layout_below="@+id/Zero"
        android:layout_toRightOf="@+id/e1"
        />Button
    <Button
        android:id="@+id/Cancel"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/r"
        android:textColor="@color/w"
        android:text="C"
        android:textSize="25dp"
        android:layout_below="@+id/Equal"
        android:layout_toRightOf="@+id/e2"
        />Button

    <Button
        android:id="@+id/Del"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/r"
        android:textColor="@color/w"
        android:text="DEL"
        android:textSize="25dp"
        android:layout_below="@+id/Zero"
        android:layout_toRightOf="@+id/Cancel"
 />Button













</RelativeLayout>
